<!DOCTYPE html>
<html lang="en">
    <head>
    <!-- Using include for sub template -->
    <%- include("includes/head.ejs", {title: "Page"}) %>
</head>
<body>
    <div class="profile-details flex">
        <div class="profilePic">
            <img src= <%= user.profileImage %> alt="">
        </div>
        <div class="info">
            <div class="top"> 
                <span>@<%= user.name %></span>
                <button>Follow</button>
                <button>Messege</button>
            </div>
            <div class="bottom flex">
               <h5> <%= user.posts.length %> Posts </h5>
               <h5> <%= user.followers %> followers</h5>
               <h5> <%= user.following %> following</h5>
            </div>
        </div>
    </div>

    <div class="posts">
        <h3>Posts</h3>
        <hr>

        <div class="images">
            <% for (const post of user.posts) { %> 
                <div>
                    <img src= <%= post.image %> alt="post">
                    <p> <%= post.likes %> likes &nbsp; &nbsp; <%= post.comments %> comments </p>
                </div>
            <% } %> 
        </div>

    </div>
</body>
</html>